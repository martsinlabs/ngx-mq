{
  "name": "ngx-mq",
  "version": "2.6.0",
  "description": "Signal-powered breakpoints and media queries for Angular.",
  "repository": {
    "type": "git",
    "url": "https://github.com/martsinlabs/ngx-mq.git"
  },
  "homepage": "https://github.com/martsinlabs/ngx-mq#readme",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "build": "ng-packagr -p ng-package.json",
    "build:watch": "ng-packagr -w -p ng-package.json",
    "format": "prettier --write .",
    "clean": "rimraf dist"
  },
  "keywords": [
    "angular",
    "signals",
    "matchMedia",
    "media-query",
    "breakpoints",
    "media-observer",
    "responsive"
  ],
  "license": "MIT",
  "sideEffects": false,
  "author": "Myroslav Martsin",
  "workspaces": [
    "demo"
  ],
  "peerDependencies": {
    "@angular/common": ">=19 <21",
    "@angular/core": ">=19 <21"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.0",
    "ng-packagr": "^20.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.5"
  }
}
