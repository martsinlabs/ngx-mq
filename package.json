{
  "name": "ngx-mq",
  "version": "1.0.4",
  "description": "Signal-powered breakpoints and media queries for Angular.",
  "repository": {
    "type": "git",
    "url": "https://github.com/martsinlabs/ngx-mq.git"
  },
  "homepage": "https://github.com/martsinlabs/ngx-mq#readme",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
