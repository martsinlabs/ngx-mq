{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
  },
  "angularCompilerOptions": {
    "compilationMode": "partial"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage", "demo"]
}
